/* =========================
   Tasks page (LEAN)
   - No per-row grey cards
   - Divider lines between rows
   - One spacing knob: --task-pad
========================= */

:root{
  --task-pad: 24px;                 /* vertical space above/below buttons */
  --task-inset: 24px;               /* left/right inset from card edge */
  --task-line: rgba(255,255,255,.14);
}

/* Only Tasks card: remove the default 16px padding from .card */
.card--tasks{
  padding: 0;
}

/* Stack = list */
.task-stack{
  display: grid;
  gap: 0;
  padding: 0 var(--task-inset);     /* NO vertical padding */
}

/* Divider line (1px) drawn at the top of every item except the first */
.task-stack > * + *{
  position: relative;
}
.task-stack > * + *::before{
  content: "";
  position: absolute;
  left: calc(-1 * var(--task-inset));
  right: calc(-1 * var(--task-inset));
  top: 0;
  height: 1px;
  background: var(--task-line);
}

/* Step rows */
.task-row{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16px;
  padding: var(--task-pad) 0;
  background: transparent;
  border: 0;
  box-shadow: none;
}

/* Status row: same vertical padding as step rows */
.status-wrap{
  padding: var(--task-pad) 0;
  margin: 0;
  background: transparent;
  border: 0;
  border-radius: 0;
  box-shadow: none;
}

/* Group buttons */
.task-group{
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16px;
  flex-wrap: wrap;
}

/* Step pill (same as before, but no drop shadow in rows) */
.step-pill{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: var(--pill-h);
  min-width: 300px;
  padding: 0 var(--pill-pad-x);
  border-radius: 999px;
  background: rgba(124,92,255,.18);
  border: 1px solid rgba(124,92,255,.32);
  color: rgba(233,237,243,.92);
  font-weight: 700;
  letter-spacing: .2px;
  white-space: nowrap;
}

.step-btn{ appearance:none; -webkit-appearance:none; cursor:pointer; }
.step-btn:disabled{ opacity:.55; cursor:not-allowed; }

/* Fixed width for Test run */
.task-group .btn{
  width: 110px;
  max-width: 110px;
  justify-content: center;
}

/* Remove drop shadows on buttons in rows */
.task-row .btn,
.task-row .step-pill,
.status-wrap .btn{
  box-shadow: none !important;
}

/* Status pills */
.status-top{
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.status-pill{
  display: inline-flex;
  align-items: center;
  gap: 10px;
  height: var(--pill-h);
  width: 210px;
  padding: 0 var(--pill-pad-x);
  border-radius: 999px;
  background: rgba(255,255,255,.06);
  border: 1px solid var(--border);
  font-weight: 650;
  letter-spacing: .2px;
  justify-content: center;
}

#liveBtn{
  width: 210px;
  justify-content: center;
  text-align: center;
  font-weight: 600;
}

/* Mobile: full width buttons */
@media (max-width: 720px){
  .task-group{ width: 100%; }
  .task-group .btn,
  .step-pill{
    width: 100%;
    max-width: 100%;
    min-width: 0;
  }
}
